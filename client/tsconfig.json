{
  "compilerOptions": {
    // Enable latest features
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Paths
    "baseUrl": ".",
    "paths": {
      "@common": ["src/common"],
      "@hooks/*": ["src/hooks/*"],
      "@utils": ["src/lib/utils"],
      "@constants": ["src/lib/constants"],
      "@queries": ["src/lib/queries"],
      "@context/*": ["src/context/*"],
      "@features/*": ["src/features/*"],
      "@shared/*": ["../shared/*"],
      "@api/*": ["src/lib/api/*"],
      "@layout": ["src/layout"]
    },

    // types
    "types": ["vitest"]
  },
  "exclude": [
    "eslint.config.js",
    "postcss.config.js",
    "tailwind.config.js",
    "i18n.js"
  ],
  "include": ["src", "../shared/types.ts"]
}
